#tag WindowCode
	#tag Method, Flags = &h21
		Private Sub RefreshUI()
		  Var validForm As Boolean = True
		  
		  Var email As String = EmailTextField.Text.Trim
		  Var password As String = PasswordTextField.Text
		  
		  // Validate email
		  If email = "" Then
		    EmailTextField.SetBadge("It can't be blank")
		    validForm = False
		  ElseIf email.IndexOf("@") = -1 Or email.IndexOf(".") = -1 Then
		    EmailTextField.SetBadge("Please enter a valid email")
		    validForm = False
		  Else
		    EmailTextField.SetBadge("OK", "success")
		  End If
		  
		  // Validate password
		  If password.Length < 8 Then
		    PasswordTextField.SetBadge("Too little")
		    validForm = False
		  Else
		    PasswordTextField.SetBadge("OK", "success")
		  End If
		  
		  // If the email and password is valid, then we'll
		  // enable the submit button
		  SubmitButton.Enabled = validForm
		End Sub
	#tag EndMethod


	#tag Property, Flags = &h21
		Private Notifications As Integer
	#tag EndProperty


#tag EndWindowCode

#tag Events EmailTextField
	#tag Event
		Sub TextChanged()
		  RefreshUI
		End Sub
	#tag EndEvent
#tag EndEvents
#tag Events PasswordTextField
	#tag Event
		Sub TextChanged()
		  RefreshUI
		End Sub
	#tag EndEvent
#tag EndEvents
#tag Events SubmitButton
	#tag Event
		Sub Pressed()
		  MessageBox("Success!")
		  Notifications = Notifications + 1
		  ExampleButton.SetBadge(Notifications.ToString)
		End Sub
	#tag EndEvent
#tag EndEvents
#tag Events ExampleButton
	#tag Event
		Sub Pressed()
		  Notifications = 0
		  Me.RemoveBadge
		End Sub
	#tag EndEvent
#tag EndEvents
